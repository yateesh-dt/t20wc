<div class="container">
    <h1 class="my-4">All Matches</h1>

    <%= form_with(url: matches_path, method: :get, local: true) do |form| %>
    <div class="form-row">
       
        <div class="form-group col-md-6">
            <%= form.label :team1_id, 'Team 1' %>
            <%= form.collection_select :team1_id, @teams, :id, :name, { prompt:
            'Select Team 1' }, { class: 'form-control', name: 'search[team1_id]'
            } %>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <%= form.label :team2_id, 'Team 2' %>
            <%= form.collection_select :team2_id, @teams, :id, :name, { prompt:
            'Select Team 2' }, { class: 'form-control', name: 'search[team2_id]'
            } %>
        </div>
        <div class="form-group col-md-3">
            <%= form.label :start_date, 'Start Date' %>
            <%= form.date_field :start_date, class: 'form-control', name:
            'search[start_date]' %>
        </div>
        <div class="form-group col-md-3">
            <%= form.label :end_date, 'End Date' %>
            <%= form.date_field :end_date, class: 'form-control', name:
            'search[end_date]' %>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <%= form.submit 'Search', class: 'btn btn-primary' %>
        </div>
    </div>
    <% end %>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Location</th>
                <th scope="col">Team 1</th>
                <th scope="col">Team 2</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @matches.each do |match| %>
            <tr>
                <td><%= match.date %></td>
                <td><%= match.location %></td>
                <td><%= match.team1.name %></td>
                <td><%= match.team2.name %></td>
                <td>
                    <%= link_to 'Show', match_path(match), class:
                    'btn btn-primary btn-sm' %>
                    <%= link_to 'Edit', edit_match_path(match), class:
                    'btn btn-warning btn-sm' %>
                    <%= link_to 'Delete', match_path(match), method: :delete,
                    data: { confirm: 'Are you sure?' }, class:
                    'btn btn-danger btn-sm' %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
