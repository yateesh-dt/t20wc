<%= form_with(model: @team, local: true, class: 'container' ) do |form| %>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <%= form.label :name, class: 'form-label' %>
                    <%= form.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :country, class: 'form-label' %>
                    <%= form.text_field :country, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :founded, class: 'form-label' %>
                    <%= form.number_field :founded, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :description, class: 'form-label' %>
                    <%= form.text_area :description, class: 'form-control' %>
            </div>
        </div>
    </div>

    <h3 class="mt-4">Players</h3>
    <div class="fields">
        <%= form.fields_for :players do |player_form| %>
            <%= render 'player_fields' , f: player_form %>
                <% end %>
    </div>

    <%= link_to_add_fields 'Add Player' , form, :players %>

        <div class="form-group mt-3">
            <%= form.submit 'Save Team' , class: 'btn btn-primary' %>
        </div>
        <% end %>