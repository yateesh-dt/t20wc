<div class="nested-fields">
    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <%= f.label :name, class: 'form-label' %>
                            <%= f.text_field :name, class: 'form-control' %>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <%= f.label :age, class: 'form-label' %>
                            <%= f.number_field :age, class: 'form-control' %>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <%= f.label :position, class: 'form-label' %>
                            <%= f.text_field :position, class: 'form-control' %>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <%= f.label :role, class: 'form-label' %>
                            <%= f.text_field :role, class: 'form-control' %>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <%= f.label :is_captain, class: 'form-label' %>
                            <%= f.check_box :is_captain, class: 'form-check-input' %>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <%= f.label :is_active, class: 'form-label' %>
                            <%= f.check_box :is_active, class: 'form-check-input' %>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :description, class: 'form-label' %>
                    <%= f.text_area :description, class: 'form-control' %>
            </div>

            <%= link_to 'Remove Player' , '#' , class: 'btn btn-danger remove_fields' %>
        </div>
    </div>
</div>